{% extends 'base.html.twig' %}

{% block body %}

	<h4 class="text-center mt-5">Modification d'un commentaire</h4>
	<div class="form_container">
		<form class="text-center mt-5 form" id="form_update" method="post">
			<div class="form-group">
				<label class="form-label mt-3" for="state">État</label>
				<br>
				<select name="state" id="state" required>
					<option value="1">Actif &#9989</option>
					<option value="0">Inactif &#x274C</option>
				</select>
			</div>
			{# Afficher le message de succès #}
			{% if message %}
				<div class="success-message bg-success text-white mt-3 p-3">{{ message }}</div>
				<script>
					setTimeout(function () { // Redirection vers la page de détails d'un personnage
window.location.href = '/public/comment';
}, 3000); // Temporisation de 3 secondes avant la redirection
				</script>
			{% endif %}
			<div>
				<button type="submit" class="btn btn-success mt-4">Modifier</button>
			</div>

			<div class="mt-3">
				<a href="/public/comment">
					<button type="button" class="btn btn-primary">Retour</button>
				</a>
			</div>
		</form>

	{% endblock %}
