{% extends 'base.html.twig' %}

{% block body %}
<div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded w-50 mx-auto p-5">
		<h2 class="text-center">Connexion <img src="assets/img/user.png" alt="user"></h2>
	
		<form action="" method="POST" class="form text-center mt-3">
			<div class="form-group mt-5">
				<label for="email">E-mail <img class="p-1" src="assets/img/email.png" alt="email"></label>
				<input type="text" class="form-control mx-auto mt-2" id="email" name="email" required>
			</div>
	
			<div class="form-group mt-4">
				<label for="password">Mot de passe <img class="p-1" src="assets/img/mdp.png" alt="mdp"></label>
				<input type="password" class="form-control mx-auto mt-2" id="password" name="password" required>
			</div>
			<button type="submit" class="btn btn-primary mt-3">Se connecter</button>
		</form>
		{% if messageError %}
			<div class="success-message bg-danger text-white mt-3 p-3 text-center">{{ messageError }}</div>
		{% endif %}
</div>
{% endblock %}
